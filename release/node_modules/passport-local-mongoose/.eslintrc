{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "no-var": "error",
    "prefer-const": "error",
    "quotes": [
      "error",
      "single",
      { "avoidEscape": true }
    ]
  }
}